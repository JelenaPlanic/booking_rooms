<%- include('../partials/head') %>
<%- include('../partials/navbar', {user}) %>
<%- include('../partials/sidebar', {user}) %>


	<!-- start page content  za svaki view ovaj content se menja!-->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">Edit Staff Details</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">Edit Staff Details</li>
                    </ol>
                </div>
            </div>
           
       <!--ADD CONTENT HERE-->      
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="card-head">
                            <header>Basic Information</header>
                            <button id="panel-button"
                                class="mdl-button mdl-js-button mdl-button--icon pull-right"
                                data-upgraded=",MaterialButton">
                                <i class="material-icons">more_vert</i>
                            </button>
                            <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                                data-mdl-for="panel-button">
                                <li class="mdl-menu__item"><i class="material-icons">assistant_photo</i>Action
                                </li>
                                <li class="mdl-menu__item"><i class="material-icons">print</i>Another action
                                </li>
                                <li class="mdl-menu__item"><i class="material-icons">favorite</i>Something else
                                    here</li>
                            </ul>
                        </div>
                        <form class="card-body row" method="post" action="/staff/edit" enctype="multipart/form-data">
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    <input class="mdl-textfield__input" type="text" value="<%= foundedStaff.firstName %>"
                                        id="txtFirstName" name="firstName">
                                        <input type="hidden" name="_id" value="<%= foundedStaff._id %>">
                                    <label class="mdl-textfield__label">First Name</label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    <input class="mdl-textfield__input" type="text" value="<%= foundedStaff.lastName %>"
                                        id="txtLasttName" name="lastName">
                                    <label class="mdl-textfield__label">Last Name</label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    <input class="mdl-textfield__input" type="email" id="txtemail"
                                        value="<%= foundedStaff.email %>" name="email">
                                    <label class="mdl-textfield__label">Email</label>
                                    <span class="mdl-textfield__error">Enter Valid Email Address!</span>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    <input class="mdl-textfield__input" type="text" id="date" disabled
                                        value="<%= dayjs(foundedStaff.joiningDate).format("DD.MM.YYYY.")%>"> <!--name (nema ga, nece se slati u bazu)-->
                                    <label class="mdl-textfield__label">Joining Date</label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    <input class="mdl-textfield__input" type="password" id="txtPwd"
                                        value="<%= foundedStaff.password %>" disabled>
                                    <label class="mdl-textfield__label">Password</label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    <input class="mdl-textfield__input" type="password" id="txtConfirmPwd"
                                        value="<%= foundedStaff.password %>" disabled>
                                    <label class="mdl-textfield__label">Confirm Password</label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    <input class="mdl-textfield__input" type="text" id="role" disabled
                                        value="<%= foundedStaff.role %>" name="role">
                                    <label class="mdl-textfield__label">Role</label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height txt-full-width">
                                    <input class="mdl-textfield__input" type="text" id="sample2" value="<%= foundedStaff.gender %>"
                                        readonly tabIndex="-1" name="gender">
                                    <label for="sample2" class="pull-right margin-0">
                                        <i class="mdl-icon-toggle__label material-icons">keyboard_arrow_down</i>
                                    </label>
                                    <label for="sample2" class="mdl-textfield__label">Gender</label>
                                    <ul data-mdl-for="sample2"
                                        class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
                                        <li class="mdl-menu__item" data-val="Male">Male</li>
                                        <li class="mdl-menu__item" data-val="Female">Female</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    <input class="mdl-textfield__input" type="text" value="<%= foundedStaff.mobile %>"
                                        pattern="-?[0-9]*(\.[0-9]+)?" id="text5" name="mobile">
                                    <label class="mdl-textfield__label" for="text5">Mobile Number</label>
                                    <span class="mdl-textfield__error">Number required!</span>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div
                                    class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    <input class="mdl-textfield__input" type="text" id="date2"
                                        value="<%= foundedStaff.birthDate %>" name="birthDate">
                                    <label class="mdl-textfield__label">Birth Date</label>
                                </div>
                            </div>
                            <div class="col-lg-12 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield txt-full-width">                
                                    <textarea class="mdl-textfield__input" rows="4" name="address"
                                        id="text7"><%= foundedStaff.address %></textarea>
                                        <label class="mdl-textfield__label" for="text7">Address</label>                                  
                                </div>
                            </div>

                            <div class="col-lg-12 p-t-20">              
                                <label for="inputImage" class="d-flex justify-content-start align-items-center gap-3 cursor-pointer"> 
                                    <span class="control-label ">Upload Profile Image</span>
                                    <i class="material-icons">cloud_upload</i>         
                                </label>
                                 <input type="file" name="image" class="d-none" id="inputImage"> <!--dodat input!-->  
                                 <input type="hidden" name="oldImage" class="d-none" value="<%= user.image %>"> <!--dodat input!--> 
                                 <img id="previewImage" src="upload/<%= foundedStaff.image %>" class="img-fluid" >
                            </div>

                  
                           
                            <div class="col-lg-12 p-t-20 text-center">
                                <button type="submit"
                                    class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-pink">Submit</button>
                                <button type="button"
                                    class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-default">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script src="assets/js/previewImage.js"></script>
   

    <%- include('../partials/footer') %>