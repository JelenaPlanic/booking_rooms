<%- include('partials/head') %>
<%- include('partials/navbar', {user}) %>
<%- include('partials/sidebar') %>

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Dashboard</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                            href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Dashboard</li>
                </ol>
            </div>
        </div>     
   <!--ADD CONTENT HERE-->
   <div class="row">
    <div class="col-md-12">
      <div class="card card-box">
        <div class="card-head">
          <header>All Bookings</header>
          <div class="tools">
            <a
              class="fa fa-repeat btn-color box-refresh"
              href="javascript:;"
            ></a>
            <a
              class="t-collapse btn-color fa fa-chevron-down"
              href="javascript:;"
            ></a>
            <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
          </div>
        </div>
        <div class="card-body">
          <div class="row p-b-20">
            <div class="col-md-6 col-sm-6 col-6">
              <div class="btn-group">
                <a href="/room" id="addRow" class="btn btn-info">
                  Add New <i class="fa fa-plus"></i>
                </a>
              </div>
            </div>
          </div>
          <div class="table-scrollable">
            <table
            class="table table-hover table-checkable order-column full-width"
            id="example4"
          >
            <thead>
              <tr>
                <th class="center">img</th>
                <th class="center">#</th>
                <th class="center">Type</th>
                <th class="center">AC/Non AC</th>
                <th class="center">Meal</th>
                <th class="center">Bad Capacity</th>
                <th class="center">Phone</th>
                <th class="center">Rent</th>
                <th class="center">Action</th>
              </tr>
            </thead>
            <tbody>
                <% rooms.forEach(room => { %>
                    <tr class="odd gradeX">
                        <td class="user-circle-img">
                            <img
                              class="img-fluid"
                              style="width: 50px; height: 50px;"
                              src="upload/<%=room.image %>"
                              alt=""
                            />
                          </td>
                          <td class="center"><%= room.roomNumber %></td>
                          <td class="center"><%= room.roomType %></td>
                          <td class="center"><%= room.ac %></td>
                          <td class="center"><%= room.meal %></td>
                          <td class="center"><%= room.badCapacity %></td>
                          <td class="center"><%= room.telNumber %></td>
                          <td class="center"><%= room.rentPerNight %></td>
                          <td class="center">
                            <a href="/room/edit/<%= room._id %>" class="btn btn-tbl-edit btn-xs"><i class="fa fa-pencil"></i></a>
                            <a href="/room/delete/<%= room._id %>"  class="btn btn-tbl-edit btn-xs"> <i class="fa fa-trash-o"></i></a>
                          </td>
                    </tr>
                    
              <%  }); %>
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
    </div>
    </div>
    </div>
 
<%- include('partials/footer') %>